<Window x:Class="ContractMonthlyClaimSystem.CoordinatorClaimReviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Claim Review" Height="350" Width="400">
    <Grid>
        
        <Label Name="ClaimStatusLabel" Content="Claim Status" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <Button Name="ApproveButton" Content="Approve" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,20" Click="ApproveButton_Click"/>
        <Button Name="RejectButton" Content="Reject" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,20" Click="RejectButton_Click"/>
        <Button Name="CloseButton" Content="Close" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CloseButton_Click"/>
    </Grid>
</Window>
